# Backend example env file
# Copy this to backend/.env and fill values before running the backend.

# Port the backend should listen on
PORT=5001

# MongoDB connection string
MONGODB_URI=mongodb://localhost:27017/chat-app

# JWT secret used to sign authentication tokens
JWT_SECRET=your_jwt_secret_here

# Cloudinary credentials (if you use image uploads)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# NODE_ENV=development
